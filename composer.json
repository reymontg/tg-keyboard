{
    "name"       : "reymon/tg-keyboard",
    "description": "An easy keyboard builder for Telegram Api & Mtproto syntax",
    "keywords"   : [
        "bot",
        "api",
        "mtproto",
        "madelineproto",
        "keyboard",
        "builder",
        "telegram",
        "telegram-api"
    ],
    "type"   : "library",
    "license": "GPL-3.0-only",
    "authors": [
        {
            "name" : "Mahdi",
            "email": "mahdi.talaee1379@gmail.com"
        },
        {
            "name" : "AmirHossein Jafari",
            "email": "amirhosseinjafari8228@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Reymon\\": "./src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Reymon\\Keyboard\\Test\\": "./tests"
        }
    },
    "require": {
        "php-64bit"       : ">=8.3",
        "ext-json"        : "*",
        "ext-mbstring"    : "*",
        "reymon/tg-common": "^1.1"
    },
    "require-dev": {
        "phpunit/phpunit"          : "^12",
        "amphp/php-cs-fixer-config": "^2"
    },
    "scripts": {
        "build": [
            "@cs-fix",
            "@test"
        ],
        "cs"    : "php -d pcre.jit=0 vendor/bin/php-cs-fixer fix -v --diff --dry-run",
        "cs-fix": "php -d pcre.jit=0 vendor/bin/php-cs-fixer fix -v --diff",
        "test"  : "php -d zend.assertions=1 -d assert.exception=1 ./vendor/bin/phpunit tests"
    }
}